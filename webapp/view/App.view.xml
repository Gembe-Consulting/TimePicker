<mvc:View controllerName="de.demo.timepicker.controller.App"
   xmlns="sap.m"
   xmlns:custom="de.demo.timepicker.control.timepicker"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
   <App>
      <pages>
         <Page>
            <content>
               <Panel>
                  <content>
                    <custom:TimePicker 
                        HHmm = "{someSourceModel>/time}"
                        change="onTimeChange"/>
                    <Text id="showText" />
                  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
</mvc:View>
